# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
profile = black
# > Handled by Black
# indent_style = space
# indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 2

[*.js]
indent_style = tab
indent_size = 4
